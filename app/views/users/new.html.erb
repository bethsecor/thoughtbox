<h3>Create an account:</h3>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><strong class="error"> <%= message %> </strong> </li>
      <% end %>
    </ul>
  <% end %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
