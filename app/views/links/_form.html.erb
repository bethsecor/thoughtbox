<%= form_for @link do |f| %>

  <% if @link.errors.any? %>
    <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><strong class="error"> <%= message %> </strong> </li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
